字符函数与字符串函数
#include <string.h>
#include <stdio.h>
int main()
{
    //char ch = 'a';
   //"abcdef";//c语言没有字符串类型
   char arr[ ] = "abcdef";
   //char arr[ ] = { 'a', 'b', 'c', 'd', 'e', 'f' };//随机值
   //char arr[10] = { 'a', 'b', 'c', 'd', 'e', 'f' };//6
   int len = strlen(arr);//string length
   printf("%d\n", len);
   return 0:
}

int main()
{
   if ((int)strlen("abc") - (int)strlen('qwerty") > 0)
   {
          printf(">\n");
   }
   else
   {
          printf("<=\n");
   }
   return 0;
}

#include <assert.h>
//1.计数器的方法
size_t my_strlen(const char* str)
{
    int count = 0;
    assert(str != NULL);
    if (*str != '\0')
    {
        count++;
        str++;
    }
    return count;
}
//2.递归的方法
//3.指针减指针的方法
int main()
{
    char arr[ ] = "abcdef";
    int len = my_strlen(arr);
    printf("%d\n", len);
    return 0;
}
